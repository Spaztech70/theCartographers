<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".SafeScanResults" >

    <TextView
        android:id="@+id/device_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:text="Type of device"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/device_signal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="-100 dBm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/device_class" />

    <TextView
        android:id="@+id/device_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Distance: 60ft"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/device_signal"
        app:layout_constraintEnd_toStartOf="@+id/device_signal"
        app:layout_constraintStart_toEndOf="@+id/device_class" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="Name of device"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/device_class"
        app:layout_constraintTop_toBottomOf="@+id/device_class" />

    <TextView
        android:id="@+id/device_mac_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MAC: XX:XX:XX:XX:XX"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/device_name"
        app:layout_constraintEnd_toEndOf="@+id/device_signal" />
</androidx.constraintlayout.widget.ConstraintLayout>